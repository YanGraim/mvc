@model List<Aluno>

<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">Matricula</th>
        <th scope="col">Nome</th>
        <th scope="col">Cpf</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (Aluno aluno in Model)
        {
            <tr>
                <td>@aluno.Matricula </td>
                <td>@aluno.Nome </td>
                <td>@aluno.Cpf </td>
                <td>
                    <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                </td>
                <td>
                    <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="DeletarAluno" asp-route-id="@aluno.Id">Deletar</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="AdicionarAluno"> Adicionar Aluno </a>
</div>